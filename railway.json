{
  "$schema": "https://docs.railway.app/schemas/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "npm install",
    "startCommand": "node server.js"
  },
  "deploy": {
    "healthcheckPath": "/",
    "restartPolicy": {
      "maxRetries": 3,
      "backoff": 5
    }
  },
  "environment": {
    "NODE_VERSION": "20"
  }
}
